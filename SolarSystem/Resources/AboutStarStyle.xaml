<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="AboutStarGrid" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="../Images/Backgrounds/aboutStarBackgr.jpg"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="MainBorderStar" TargetType="Border">
        <Setter Property="Background" Value="#a3daa520"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="17"/>
    </Style>
    <Style x:Key="TextBlockBorderStar" TargetType="Border">
        <Setter Property="Background" Value="#ffc6961b"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="CornerRadius" Value="7"/>
        <Setter Property="Margin" Value="50, 0, 0, 5"/>
    </Style>
    <Style x:Key="TextBlockStar" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Franklin Gothic Medium"/>
    </Style>
</ResourceDictionary>